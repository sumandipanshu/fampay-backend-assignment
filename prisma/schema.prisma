generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model VideoDetail{
  id String @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title String
  description String
  publishedAt DateTime
  channelTitle String
  thumbnailUrl String

  @@fulltext([title])
}